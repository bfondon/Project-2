<div class="dashboard" style="padding: 10px;">

    <div class="container">
        <div class="col-8 offet-2">
            <div class="add_habit" style="color:#2d3d4f; font-weight:bold;"> 
                <button id="addButton">+</button>
                <span>add habit</span><br>
                Habit:<input type="text" id="habitname"><br>
                Goal: <input type="text" id="goal"><br>
                Achieved: <input type="text" id="achieved"><br>
            </div>
            <br>
            <div class="habits">

                {{#each allHabits}}

                <div class="card-body">
                    <div class="progress-box progress-1">
                        <h4 class="por-title"><a href="/hobbies">{{habitname}}</a></h4>
                        <div class="por-txt">Goal: {{goal}} hrs</div>
                        <div class="por-txt">Achieved so far: {{achieved}} hrs</div>
                        <div class="por-txt">Goal achieved: {{achievedPercentage}}%</div>
                        <div class="progress mb-2" style="height: 5px;">
                            <div class="progress-bar bg-flat-color-1" role="progressbar" style="width: {{achievedPercentage}}%;"
                                aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>

                {{/each}}
            </div>
        </div>

    </div>
</div>
<script>
    $("#addButton").click(function (e) {
        e.preventDefault();

        var goalVal = parseInt($("#goal").val().trim());
        var achievedVal = parseInt($("#achieved").val().trim());

        var newHabit = {
            habitname: $("#habitname").val().trim(),
            goal: goalVal,
            achieved: achievedVal,
            achievedPercentage: (achievedVal / goalVal) * 100
        }

        console.log(newHabit.achievedPercentage);

        $.ajax({
            type: "POST",
            url: "/api/habits",
            data: newHabit
        }).then(function(data){
            console.log("response: " + data)
            location.reload()
        })

    })

    $("#logout-submit").click(function (e) {
        e.preventDefault();
        location.replace("/logout");
    })
